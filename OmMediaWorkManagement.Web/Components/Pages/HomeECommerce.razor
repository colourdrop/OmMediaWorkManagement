        new(){ Name="Corporate Pen", Image="/products/p3.jpg", Description="Executive pens"},
        new(){ Name="Gift Bag", Image="/products/p4.jpg", Description="Custom bags"},
        new(){ Name="Cap", Image="/products/p5.jpg", Description="Printed caps"},
        new(){ Name="Bottle", Image="/products/p6.jpg", Description="Steel bottles"},
        new(){ Name="Diary", Image="/products/p7.jpg", Description="Office diary"},
        new(){ Name="Keychain", Image="/products/p8.jpg", Description="Custom keychain"},
        new(){ Name="Hoodie", Image="/products/p9.jpg", Description="Winter branding"},
        new(){ Name="Sticker Pack", Image="/products/p10.jpg", Description="Bulk stickers"},
        // Add up to 40–50 items same way
    };
}
