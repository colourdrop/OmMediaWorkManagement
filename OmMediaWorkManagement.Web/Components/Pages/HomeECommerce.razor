@page "/"
@inject IJSRuntime JS

<!-- NAVBAR -->
<header class="w-full backdrop-blur-xl bg-white/60 border-b border-white/40 sticky top-0 z-50">

    <div class="max-w-7xl mx-auto flex items-center justify-between px-8 py-3">



        <!-- CENTER : MENU -->
        <nav class="hidden md:flex items-center gap-10 text-gray-600 font-medium">
            <a href="#top" class="relative group cursor-pointer">
                Home
                <span class="absolute left-0 -bottom-1 h-[2px] w-0 bg-blue-600 transition-all duration-300 group-hover:w-full"></span>
            </a>



            <a href="#services" class="relative group cursor-pointer">
                Services
                <span class="absolute left-0 -bottom-1 h-[2px] w-0 bg-blue-600 transition-all duration-300 group-hover:w-full"></span>
            </a>
            <a href="#showcase" class="relative group cursor-pointer">
                Show Case
                <span class="absolute left-0 -bottom-1 h-[2px] w-0 bg-blue-600 transition-all duration-300 group-hover:w-full"></span>
            </a>
            <a href="#contactus" class="relative group cursor-pointer">
                Contact Us
                <span class="absolute left-0 -bottom-1 h-[2px] w-0 bg-blue-600 transition-all duration-300 group-hover:w-full"></span>
            </a>

            <a href="#location" class="relative group cursor-pointer">
                Location
                <span class="absolute left-0 -bottom-1 h-[2px] w-0 bg-blue-600 transition-all duration-300 group-hover:w-full"></span>
            </a>
            <a href="#request" class="relative group cursor-pointer">
                Request Us
                <span class="absolute left-0 -bottom-1 h-[2px] w-0 bg-blue-600 transition-all duration-300 group-hover:w-full"></span>
            </a>

        </nav>

        <!-- RIGHT : LOGIN -->
        <NavLink href="/login"
                 class="  text-white px-6 py-2 rounded-full hover:bg-slate-700 transition" style="background-color:#a0824a">
            Official Login
        </NavLink>

    </div>

</header>

<div id="top" class="min-h-screen bg-gradient-to-br from-blue-100 via-white to-indigo-200">
    <div class="max-w-2xl mx-auto">

        <div class="flex items-center gap-2 mb-5">

            <img src="/MediaCartLogo.svg" class="h-10 w-50" />

            <h2 class="text-4xl font-bold text-blue-700">
                MediaCart
            </h2>

        </div>

    </div>
    <!-- HERO SECTION -->
    <section id="services" class="min-h-[80vh] bg-gradient-to-br from-blue-50 via-white to-indigo-100 flex items-center justify-center">


        <div class="max-w-6xl mx-auto text-center">
            <div class="max-w-7xl mx-auto px-6 text-center">

                <h2 class="text-4xl font-bold text-gray-800 mb-3">Our Services</h2>
                <p class="text-gray-500 mb-14">Custom printing & branding solutions</p>

                <div class="grid md:grid-cols-3 gap-10">

                    <div class="p-8 rounded-2xl shadow-lg hover:shadow-xl transition bg-gradient-to-br from-blue-50 to-white">
                        <h3 class="text-xl font-semibold mb-2">Custom T-Shirts</h3>
                        <p class="text-gray-500">Bulk printing with custom branding.</p>
                    </div>

                    <div class="p-8 rounded-2xl shadow-lg hover:shadow-xl transition bg-gradient-to-br from-blue-50 to-white">
                        <h3 class="text-xl font-semibold mb-2">Corporate Gifts</h3>
                        <p class="text-gray-500">Pens, mugs, bags & office kits.</p>
                    </div>

                    <div class="p-8 rounded-2xl shadow-lg hover:shadow-xl transition bg-gradient-to-br from-blue-50 to-white">
                        <h3 class="text-xl font-semibold mb-2">On-Demand Printing</h3>
                        <p class="text-gray-500">Any item customized quickly.</p>
                    </div>

                </div>
            </div>
            <!-- GLASS CARD -->
            @* <div class="mt-16 flex justify-center">

                <div class="w-[700px] h-[320px]
                rounded-[40px]
                bg-white/20
                backdrop-blur-2xl
                border border-white/30
                shadow-[0_20px_60px_rgba(0,0,0,0.15)]
                flex items-center justify-center">

                    <img src="/MediaCart.svg" class="w-52 opacity-90" />

                </div>

            </div> *@



        </div>

    </section>
    <section id="showcase" class="scroll-mt-24 py-24 bg-gray-50">

        <div class="max-w-7xl mx-auto px-6">

            <h2 class="text-4xl font-bold text-gray-800 text-center mb-3">Product Showcase</h2>
            <p class="text-gray-500 text-center mb-14">Browse our customizable items</p>

            <div class="grid sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">

                @foreach (var item in Products)
                {
                    <div class="bg-white rounded-2xl shadow hover:shadow-xl transition group">

                        <div class="overflow-hidden rounded-t-2xl">
                            <img src="@item.Image"
                                 class="w-full h-56 object-cover group-hover:scale-110 transition duration-500" />
                        </div>

                        <div class="p-4">

                            <h3 class="font-semibold text-lg">@item.Name</h3>
                            <p class="text-gray-500 text-sm">@item.Description</p>

                            <button style="background-color:#a0824a" class="mt-4 w-full   from-blue-600 to-indigo-600 text-white py-2 rounded-lg hover:scale-105 transition" @onclick="() => SelectProduct(item)">
                                Request Quote
                            </button>

                        </div>

                    </div>
                }

            </div>

        </div>

    </section>

    <section id="location" class="scroll-mt-24 py-28 bg-gradient-to-br from-blue-50 via-white to-indigo-100">

        <div class="max-w-6xl mx-auto px-6 text-center">

            <h2 class="text-4xl font-bold text-gray-800 mb-3">Visit Our Office</h2>
            <p class="text-gray-500 mb-12">We are available for direct consultation</p>

            <div class="rounded-[40px] overflow-hidden
                    bg-white/40 backdrop-blur-xl border border-white/40
                    shadow-[0_20px_60px_rgba(0,0,0,0.15)]">

                <iframe class="w-full h-[420px]"
                        src="https://www.google.com/maps?q=Chandigarh&output=embed">
                </iframe>

            </div>

        </div>
    </section>
    <section id="request" class="scroll-mt-24 py-28 bg-[#F4EFEA]">

        <div class="max-w-4xl mx-auto">

            <div class="rounded-3xl bg-[#2B2624] p-12 text-white shadow-2xl">

                <h2 class="text-3xl mb-6">Request Custom Quote</h2>

                <input class="w-full mb-4 p-3 rounded-lg bg-[#3A3532] border border-[#4B4541]" placeholder="Email" />

                <button style="background-color:#a0824a" class="hover:bg-orange-600 px-6 py-3 rounded-lg">
                    Submit
                </button>

            </div>

        </div>
    </section>

    <footer id="contactus"
            class="scroll-mt-24 pt-20 pb-10
               bg-gradient-to-br from-[#2B2624] via-[#2F2A28] to-[#1E1B19]
               text-[#E7E2DD] relative">

        <div class="max-w-7xl mx-auto px-6 grid md:grid-cols-4 gap-12">

            <!-- BRAND -->
            <div>
                <h3 class="text-2xl font-semibold text-[#a0824a]" style="color:#a0824a">MediaCart</h3>

                <p class="text-[#C8C2BD] leading-relaxed">
                    Premium custom branding, merchandise printing and corporate gifting solutions.
                </p>
            </div>

            <!-- LINKS -->
            @* <div>
                <h3 class="font-semibold mb-4 text-[#E7E2DD]" style="color:#a0824a">Quick Links</h3>
                <ul class="space-y-2 text-[#C8C2BD]">
                    <li class="hover:text-orange-400 transition cursor-pointer">Home</li>
                    <li class="hover:text-orange-400 transition cursor-pointer">
                        <a href="#services">
                            Services
                        </a>
                    </li>
                    <li class="hover:text-orange-400 transition cursor-pointer">Showcase</li>
                    <li class="hover:text-orange-400 transition cursor-pointer">Request</li>
                </ul>
            </div> *@

            <!-- CONTACT -->
            <div>
                <h3 class="font-semibold mb-4 text-[#E7E2DD]" style="color:#a0824a">Contact</h3>
                <p class="text-[#C8C2BD]">support@mediacart.com</p>
                <p class="text-[#C8C2BD] mt-2">+91 99999 99999</p>
            </div>

            <!-- OFFICE -->
            <div>
                <h3 class="font-semibold mb-4 text-[#E7E2DD]" style="color:#a0824a">Office</h3>
                <p class="text-[#C8C2BD]">Industrial Area</p>
                <p class="text-[#C8C2BD]">Chandigarh, India</p>
            </div>

        </div>

        <div class="mt-14 border-t border-[#3A3532] pt-6 text-center text-[#A8A29E] text-sm">
            © 2026 MediaCart · Crafted with precision
        </div>
    </footer>

 



</div>



@code {
    string? SelectedProductName;

    async Task SelectProduct(ProductItem item)
    {
        SelectedProductName = item.Name;

        // Scroll to request section
        await JS.InvokeVoidAsync("scrollToSection", "request");
    }
    public class ProductItem
    {
        public string Name { get; set; }
        public string Image { get; set; }
        public string Description { get; set; }
    }

    List<ProductItem> Products = new()
    {
        new(){ Name="Custom T-Shirt", Image="/codersf5.png", Description="Logo printed apparel"},
