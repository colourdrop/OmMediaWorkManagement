@page "/login"

<div class="min-h-screen flex items-center justify-center bg-[#F3EFEA]">

    <div class="w-full max-w-md">

        <div class="text-center mb-8">
            <h2 class="text-3xl font-semibold text-[#3A2E25]">Admin Login</h2>
            <p class="text-sm text-[#8B7E74]">Authorized access only</p>
        </div>

        <div class="bg-white rounded-2xl shadow-xl p-8 border border-[#E5DED6]">

            <RadzenAlert Visible="@showAlert"
                         AlertStyle="@alertColor"
                         ShowIcon="true"
                         Variant="Variant.Flat"
                         Shade="Shade.Lighter"
                         class="mb-4">
                @responseMessage
            </RadzenAlert>

            <EditForm Model="@userForAuthentication" OnValidSubmit="@HandleValidSubmit">
                <DataAnnotationsValidator />

                <div class="space-y-6">

                    <div>
                        <label class="text-sm text-[#6B5F55]">Username</label>
                        <InputText @bind-Value="userForAuthentication.Username"
                                   class="mt-2 w-full px-4 py-3 rounded-lg
                                          bg-[#FAF8F5]
                                          border border-[#D6CFC7]
                                          focus:ring-2 focus:ring-[#A0824A]
                                          outline-none" />
                    </div>

                    <div>
                        <label class="text-sm text-[#6B5F55]">Password</label>
                        <InputText type="password"
                                   @bind-Value="userForAuthentication.Password"
                                   class="mt-2 w-full px-4 py-3 rounded-lg
                                          bg-[#FAF8F5]
                                          border border-[#D6CFC7]
                                          focus:ring-2 focus:ring-[#A0824A]
                                          outline-none" />
                    </div>

                    <div class="text-right">
                        <a class="text-sm text-[#A0824A] hover:underline">Forgot Password?</a>
                    </div>

                    <button type="submit"
                            disabled="@isLoading"
                            class="w-full py-3 rounded-lg
               bg-[#A0824A] hover:bg-[#8D713F]
               text-white font-medium transition
               flex items-center justify-center gap-2">

                        @if (isLoading)
                        {
                            <svg class="animate-spin h-5 w-5 text-white"
                                 xmlns="http://www.w3.org/2000/svg"
                                 fill="none"
                                 viewBox="0 0 24 24">
                                <circle class="opacity-25" cx="12" cy="12" r="10"
                                        stroke="currentColor" stroke-width="4"></circle>
                                <path class="opacity-75"
                                      fill="currentColor"
                                      d="M4 12a8 8 0 018-8v8z"></path>
                            </svg>

                            <span>Signing In...</span>
                        }
                        else
                        {
                            <span>Sign In</span>
                        }

                    </button>


                </div>
            </EditForm>
        </div>

        <p class="text-center text-xs text-[#9C8F86] mt-6">
            Admin Portal · MediaCart
        </p>

    </div>
</div>
